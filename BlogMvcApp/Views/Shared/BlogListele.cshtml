@model IEnumerable<BlogMvcApp.Models.BlogModel>
<h2>Blok listesi</h2>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger">kayıt bulunamadı</div>
}
else
{
    foreach (var blog in Model)
    {
        <div class="blog">
            <h3 class="page-header">@blog.Baslik</h3>
            <p><span class="glyphicon glyphicon-time"></span>@blog.EklenmeTarihi</p>
            <hr />
            <img class="img-responsive" src="http://placehold.it/900x300" alt=" " />
            <hr />
            <p>@blog.Aciklama</p>
            @Html.ActionLink("Daha fazla....", "Details", "Blog", new { id = blog.Id }, new { @class = "btn btn-primary" })

        </div>
    }
}